<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity_My_Profile">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="-144dp"
        tools:layout_editor_absoluteY="-220dp">

        <Button
            android:id="@+id/profileDeleteBtn"
            android:layout_width="329dp"
            android:layout_height="61dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginEnd="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="113dp"
            android:onClick="deleteBtn_Click"
            android:text="@string/delete"
            android:textSize="18sp"
            android:textStyle="bold"
            app:backgroundTint="@color/red_dark" />

        <ProgressBar
            android:id="@+id/profileProgressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="208dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="100dp"
            android:layout_marginTop="250dp"
            android:layout_marginEnd="100dp" />

        <Button
            android:id="@+id/profileReturnBtn"
            android:layout_width="329dp"
            android:layout_height="61dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginEnd="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="40dp"
            android:onClick="returnBtn_Click"
            android:text="@string/returnBtn"
            android:textSize="18sp"
            android:textStyle="bold"
            app:backgroundTint="@color/blue" />

        <TextView
            android:id="@+id/profileUsernameText"
            android:layout_width="171dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="150dp"
            android:layout_marginEnd="220dp"
            android:text="@string/username"
            android:textAlignment="textEnd"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/profileNameText"
            android:layout_width="169dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profileUsernameText"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="220dp"
            android:text="@string/name"
            android:textAlignment="textEnd"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/profileMailText"
            android:layout_width="169dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profileNameText"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="220dp"
            android:text="@string/mail"
            android:textAlignment="textEnd"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/profileTitleText"
            android:layout_width="305dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="53dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="53dp"
            android:text="@string/profile"
            android:textAlignment="center"
            android:textSize="36sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/profileLoadingText"
            android:layout_width="152dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profileProgressBar"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="130dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="130dp"
            android:text="@string/loading"
            android:textAlignment="center"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/profileUsernameOut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="220dp"
            android:layout_marginTop="150dp"
            android:text="@string/username"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/profileNameOut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profileUsernameOut"
            android:layout_alignParentStart="true"
            android:layout_marginStart="220dp"
            android:layout_marginTop="60dp"
            android:text="@string/name"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/profileMailOut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profileNameOut"
            android:layout_alignParentStart="true"
            android:layout_marginStart="220dp"
            android:layout_marginTop="60dp"
            android:text="@string/mail"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/profileMoneyText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profileMailText"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="220dp"
            android:text="@string/current_money"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/profileMoneyOut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profileMailOut"
            android:layout_alignParentStart="true"
            android:layout_marginStart="220dp"
            android:layout_marginTop="60dp"
            android:text="@string/current_money"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/profileEditImage"
            android:layout_width="44dp"
            android:layout_height="48dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:onClick="editProfileImage_Click"
            app:srcCompat="@android:drawable/ic_menu_edit" />

        <EditText
            android:id="@+id/profileEditUsernameOut"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="140dp"
            android:layout_marginEnd="15dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="@string/username" />

        <EditText
            android:id="@+id/profileEditNameOut"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="224dp"
            android:layout_marginEnd="15dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="@string/name" />

        <EditText
            android:id="@+id/profileEditMailOut"
            android:layout_width="179dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="308dp"
            android:layout_marginEnd="15dp"
            android:ems="10"
            android:inputType="textEmailAddress"
            tools:text="@string/mail" />

        <EditText
            android:id="@+id/profileEditPasswordOld"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="139dp"
            android:layout_marginEnd="15dp"
            android:ems="10"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/profileEditPasswordNew1"
            android:layout_width="181dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="224dp"
            android:layout_marginEnd="15dp"
            android:ems="10"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/profileEditPasswordNew2"
            android:layout_width="179dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="308dp"
            android:layout_marginEnd="14dp"
            android:ems="10"
            android:inputType="textPassword" />

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>