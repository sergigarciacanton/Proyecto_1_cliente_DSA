<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.dsa">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Proyecto_G1_cliente"
        android:usesCleartextTraffic="true">
        <activity android:name=".Activity_My_items_Specifications"></activity>
        <activity
            android:name=".Activity_Statistics"
            android:theme="@style/ThemeStatistics" />
        <activity
            android:name=".Activity_My_Profile"
            android:theme="@style/ThemeMyProfile" />
        <activity
            android:name=".Activity_Store"
            android:theme="@style/ThemeStore" />
        <activity
            android:name=".Activity_My_Items"
            android:theme="@style/ThemeMyItems" />
        <activity
            android:name=".Activity_New_Game"
            android:theme="@style/ThemeNewGame" />
        <activity android:name=".MainMenu" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>